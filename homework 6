        line-height: 1.5;
      }

      .box {
        direction: rtl;
        display: flex;
        justify-content: flex-end;
      }

      .inline {
  display: inline-block;
  color: white;
}
.red {
  background-color: red;
}
.blue {
  background-color: blue;
}

.item {
  width: 70px;
  height: 70px;
  border: 1px solid red;
}
.relative {
  position: absolute;
  top: 40px;
  left: 40px;
}

      
